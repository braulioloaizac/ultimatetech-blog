<div class="bg-success px-3 py-5 text-dark">
<h1 class="text-light bg-dark rounded px-3 py-3 pl-10 bg-opacity-75 shadow-lg">Sign Up</h1>
</div>
<form class="signup-form h-100 px-5 py-3 bg-light bg-opacity-50 border rounded-3 my-3">
  <div>
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" />
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div>
    <button class="btn btn-outline-dark my-3" type="submit">Sign up</button>
  </div>
  <a href="/login">Log in instead</a>
</form>

<script src="/js/login.js"></script>