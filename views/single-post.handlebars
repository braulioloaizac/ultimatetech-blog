<article class="post">
  <div class="title">
    <h1>{{post.title}}</h1>
    <p>by {{post.user.username}}</p>
  </div>
  <div class="meta">
     on{{post.created_at}}
    <a href="/post/{{post.id}}">{{post.comments}}</a>
  </div>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>